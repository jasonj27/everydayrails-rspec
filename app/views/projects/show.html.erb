<h1><%= @project.name %></h1>

<p>
  <%= simple_format @project.description %>
</p>

<p>
  Owner: <%= @project.owner.name %>
</p>

<p>
  Due: <%= @project.due_on %>
</p>

<div>
  <%= link_to 'Add Task', new_project_task_path(@project), class: "btn btn-primary" %>
  <%= link_to 'Add Note', new_project_note_path(@project), class: "btn btn-primary" %>
  <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-primary" %>
  <%= link_to 'Back', projects_path, class: "btn btn-primary" %>
</div>

<h2 class="mt-4" >Tasks</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <%= render @project.tasks %>
  </tbody>
</table>

<h2>Notes</h2>

<%= form_with url: project_notes_path(@project),
    local: true, method: :get, class: "form-inline mb-3" do |f| %>
  <div class="form-group">
    <%= f.label :term, class: "mr-2" %>
    <%= f.search_field :term, class: "form-control mr-2" %>
    <%= f.submit "Search Notes", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="list-group">
  <%= render @project.notes %>
</div>